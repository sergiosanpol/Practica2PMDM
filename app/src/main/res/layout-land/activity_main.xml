<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tituloApuestas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tituloApuestas"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_registro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="abrirRegistro"
                android:text="@string/btn_registro" />

            <Button
                android:id="@+id/btn_apuestas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="abrirApuestas"
                android:text="@string/btn_apuestas" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_ajustes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_ajustes" />

            <Button
                android:id="@+id/btn_sorteo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_sorteo" />
        </TableRow>

    </TableLayout>
</LinearLayout>